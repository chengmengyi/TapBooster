<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="224dp">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/native_ad_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/bg_ffffff_8dp">
            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/native_ad_media"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/native_ad_logo"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_tag"
                android:layout_width="25dp"
                android:layout_height="16dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_ad_tag"
                app:layout_constraintTop_toTopOf="@id/native_ad_title"
                app:layout_constraintRight_toLeftOf="@id/native_ad_install"
                />
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/native_ad_logo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:round="6dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_ad_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cut The Rope:Magic"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#3C4C56"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toRightOf="@id/native_ad_logo"
                app:layout_constraintRight_toLeftOf="@id/iv_tag"
                app:layout_constraintTop_toTopOf="@id/native_ad_logo"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_ad_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/native_ad_title"
                app:layout_constraintLeft_toRightOf="@id/native_ad_logo"
                app:layout_constraintRight_toLeftOf="@id/native_ad_install"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_ad_install"
                android:layout_width="88dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_162d30_20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/native_ad_logo"
                app:layout_constraintBottom_toBottomOf="@id/native_ad_logo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/native_ad_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cover1"
        android:scaleType="fitXY"/>
</RelativeLayout>