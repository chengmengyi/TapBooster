<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8F9F7">
    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clean"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintLeft_toRightOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_clean_bg"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="20dp"
        android:background="@drawable/clean_top_bg"
        app:layout_constraintTop_toBottomOf="@id/iv_back" />
    <androidx.appcompat.widget.AppCompatCheckedTextView
        android:id="@+id/tv_all_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/iv_clean_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_clean_bg"
        app:layout_constraintRight_toRightOf="@id/iv_clean_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_clean_bg"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_dir_path"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Scanning: "
        android:textSize="12sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_clean_bg"
        app:layout_constraintRight_toRightOf="@id/iv_clean_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_clean_bg"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_clean"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_ffffff_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_clean_bg"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_clean_btn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:text="CLEAN JUNK 0KB"
        android:textColor="@color/white"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_fff930d_fce06a_16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>